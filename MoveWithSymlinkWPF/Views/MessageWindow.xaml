<Window x:Class="MoveWithSymlinkWPF.Views.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示"
        Width="500"
        MinHeight="200"
        MaxHeight="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style TargetType="Button" x:Key="MessageButtonStyle">
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="4"
                               Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource MessageButtonStyle}">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource MessageButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.3" Direction="270" ShadowDepth="2"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                   Background="#F8F9FA"
                   CornerRadius="8,8,0,0"
                   Padding="20,15"
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <Grid x:Name="IconBackground"
                         Width="32"
                         Height="32"
                         Margin="0,0,12,0">
                        <Ellipse Fill="{Binding Background, RelativeSource={RelativeSource AncestorType=Grid}}"/>
                        <TextBlock x:Name="IconTextBlock"
                                  Text="ℹ"
                                  FontSize="18"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FontWeight="Bold"/>
                    </Grid>

                    <!-- 标题 -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                              FontSize="16"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="#333333"/>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="2"
                           Content="✕"
                           Width="28"
                           Height="28"
                           Background="Transparent"
                           Foreground="#666666"
                           BorderThickness="0"
                           FontSize="16"
                           Cursor="Hand"
                           Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 消息内容区域 -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         MaxHeight="350"
                         Margin="20,20,20,15">
                <TextBlock x:Name="MessageTextBlock"
                          Text="消息内容"
                          FontSize="13"
                          Foreground="#555555"
                          TextWrapping="Wrap"
                          LineHeight="22"/>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Border Grid.Row="2"
                   Background="#F8F9FA"
                   CornerRadius="0,0,8,8"
                   Padding="20,12">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right">
                    <Button x:Name="YesButton"
                           Content="是"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="YesButton_Click"/>
                    <Button x:Name="OKButton"
                           Content="确定"
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="OKButton_Click"/>
                    <Button x:Name="NoButton"
                           Content="否"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="NoButton_Click"/>
                    <Button x:Name="CancelButton"
                           Content="取消"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
