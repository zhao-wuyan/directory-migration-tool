<Window x:Class="MoveWithSymlinkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoveWithSymlinkWPF"
        xmlns:converters="clr-namespace:MoveWithSymlinkWPF.Converters"
        mc:Ignorable="d"
        Title="目录迁移工具 - Directory Migration Tool" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <converters:StepVisibilityConverter x:Key="StepVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="36"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="36"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="目录迁移工具" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock Text="使用符号链接透明迁移大型目录" FontSize="14" Foreground="Gray"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="手动模式" Command="{Binding ShowManualModeCommand}" 
                            Padding="15,8" Margin="5,0"
                            Background="{Binding IsManualMode, Converter={StaticResource BoolToColorConverter}}"
                            Foreground="{Binding IsManualMode, Converter={StaticResource BoolToForegroundConverter}}"/>
                    <Button Content="⏩ 一键迁移" Command="{Binding ShowQuickMigrateCommand}" 
                            Padding="15,8" Margin="5,0"
                            Background="{Binding IsQuickMigrateMode, Converter={StaticResource BoolToColorConverter}}"
                            Foreground="{Binding IsQuickMigrateMode, Converter={StaticResource BoolToForegroundConverter}}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="by 诏无言" FontSize="14" Foreground="#0078D4" FontStyle="Italic" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding VersionText}" FontSize="11" Foreground="Gray" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Step Navigator (Manual Mode Only) -->
            <Border Grid.Column="0" Background="#F8F8F8" Padding="12" Margin="0,0,12,0" CornerRadius="5"
                    Visibility="{Binding IsManualMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="步骤" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="●" FontSize="16" Foreground="#0078D4" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="1">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="○" FontSize="16" Foreground="Gray" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="1">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="1. 选择路径" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="●" FontSize="16" Foreground="#0078D4" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="○" FontSize="16" Foreground="Gray" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="2. 扫描分析" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="●" FontSize="16" Foreground="#0078D4" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="○" FontSize="16" Foreground="Gray" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="3. 执行迁移" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="●" FontSize="16" Foreground="#0078D4" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="4">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="○" FontSize="16" Foreground="Gray" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="4">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="4. 完成" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Manual Mode Content -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsManualMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    
                    <!-- Step 1: Path Selection -->
                    <Border Background="White" Padding="15" Margin="0,0,0,8" CornerRadius="5"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}">
                        <StackPanel>
                            <!-- 标题和模式标签 -->
                            <Grid Margin="0,10,0,10">
                                <TextBlock Text="选择源目录和目标目录" FontSize="18" FontWeight="SemiBold" 
                                           HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,4" CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Background" Value="#FFF4E5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CurrentModeDisplay}" FontWeight="Bold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#0078D4"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                            
                            <TextBlock Text="源目录（要迁移的目录）" FontWeight="SemiBold" Margin="0,10,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="浏览..." Command="{Binding BrowseSourceCommand}"/>
                            </Grid>
                            
                            <!-- 目标目录标签根据模式动态显示 -->
                            <TextBlock FontWeight="SemiBold" Margin="0,15,0,5">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="目标目录（迁移到的位置）"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                <Setter Property="Text" Value="目标目录（符号链接指向）"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="{Binding IsTargetPathReadOnly}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="Height" Value="36"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTargetPathReadOnly}" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <Button Grid.Column="1" Content="浏览..." Command="{Binding BrowseTargetCommand}"
                                        IsEnabled="{Binding IsTargetPathReadOnly, Converter={StaticResource InverseBoolConverter}}"/>
                            </Grid>
                            
                            <TextBlock Text="高级选项" FontWeight="SemiBold" Margin="0,15,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="大文件阈值 (MB):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding LargeFileThresholdMB, UpdateSourceTrigger=PropertyChanged}"/>
                                
                                <TextBlock Grid.Column="2" Text="复制线程数:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                                <TextBox Grid.Column="3" Text="{Binding RobocopyThreads, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            
                            <Border Background="#FFF4CE" Padding="10" Margin="0,15,0,0" CornerRadius="3"
                                    Visibility="{Binding HasValidationError, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="❌" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ValidationMessage}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="#FFF9E6" Padding="10" Margin="0,15,0,0" CornerRadius="3"
                                    Visibility="{Binding HasValidationError, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ValidationMessage}" TextWrapping="Wrap"/>
                                </StackPanel>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValidationMessage, Converter={StaticResource StringToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                            <!-- 修复模式提示 -->
                            <Border Background="#E8F5E9" Padding="10" Margin="0,15,0,0" CornerRadius="3"
                                    Visibility="{Binding CanRepair, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="🔧" Margin="0,0,10,0" FontSize="16"/>
                                        <TextBlock Text="检测到可修复" FontWeight="Bold" Foreground="#2E7D32"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding RepairHint}" TextWrapping="Wrap" Foreground="#424242" Margin="26,0,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                <!-- 修复按钮 -->
                                <Button Command="{Binding StartRepairCommand}"
                                        Visibility="{Binding CanRepair, Converter={StaticResource BoolToVisibilityConverter}}"
                                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                                        Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                                        Content="修复链接"/>
                                
                                <!-- 扫描按钮 -->
                                <Button Command="{Binding StartScanFromStep1Command}"
                                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                                        Background="#0078D4" Foreground="White" FontWeight="SemiBold">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Content" Value="开始扫描"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Content" Value="开始验证"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Step 2: Scan -->
                    <Border Background="White" Padding="15" Margin="0,0,0,8" CornerRadius="5"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}">
                        <StackPanel>
                            <!-- 标题和模式标签 -->
                            <Grid Margin="0,10,0,10">
                                <TextBlock FontSize="18" FontWeight="SemiBold" 
                                           HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="扫描分析"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Text" Value="验证还原条件"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,4" CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Background" Value="#FFF4E5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CurrentModeDisplay}" FontWeight="Bold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#0078D4"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                            
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="将扫描源目录并分析文件信息，这可能需要几分钟时间。"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                <Setter Property="Text" Value="将扫描符号链接指向的数据目录并分析文件信息，这可能需要几分钟时间。"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <Border Background="#F8F8F8" Padding="15" MinHeight="120" CornerRadius="3">
                                <TextBlock Text="{Binding StatsMessage}" TextWrapping="Wrap" FontFamily="Consolas"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                <Button Content="上一步" Command="{Binding BackToStep1Command}"
                                        IsEnabled="{Binding IsMigrating, Converter={StaticResource InverseBoolConverter}}"/>
                                <Button Command="{Binding StartMigrationFromStep2Command}"
                                        IsEnabled="{Binding IsMigrating, Converter={StaticResource InverseBoolConverter}}"
                                        Background="#0078D4" Foreground="White" FontWeight="SemiBold">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Content" Value="开始迁移"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Content" Value="开始还原"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Step 3: Migration -->
                    <Border Background="White" Padding="15" Margin="0,0,0,8" CornerRadius="5"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}">
                        <StackPanel>
                            <!-- 标题和模式标签 -->
                            <Grid Margin="0,10,0,10">
                                <TextBlock FontSize="18" FontWeight="SemiBold" 
                                           HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="执行迁移"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Text" Value="执行还原"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,4" CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Background" Value="#FFF4E5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CurrentModeDisplay}" FontWeight="Bold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#0078D4"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                            
                            <TextBlock Text="{Binding PhaseDescription}" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            
                            <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="20" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ProgressMessage}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            
                            <Border Background="#F8F8F8" Padding="10" Height="300" CornerRadius="3">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding LogMessages}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="12" 
                                                          TextWrapping="Wrap" Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                <Button Content="取消" Command="{Binding CancelMigrationCommand}"
                                        Visibility="{Binding IsMigrating, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <Button Content="完成" Command="{Binding ViewResultCommand}"
                                        Visibility="{Binding MigrationCompleted, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#0078D4" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Step 4: Result -->
                    <Border Background="White" Padding="15" Margin="0,0,0,8" CornerRadius="5"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=4}">
                        <StackPanel>
                            <!-- 标题和模式标签 -->
                            <Grid Margin="0,10,0,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="✓" FontSize="32" Foreground="Green" Margin="0,0,10,0"
                                              Visibility="{Binding MigrationSuccess, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <TextBlock Text="✗" FontSize="32" Foreground="Red" Margin="0,0,10,0"
                                              Visibility="{Binding MigrationSuccess, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    <TextBlock FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="迁移结果"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                        <Setter Property="Text" Value="还原结果"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                        Padding="10,4" CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                    <Setter Property="Background" Value="#FFF4E5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding CurrentModeDisplay}" FontWeight="Bold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#0078D4"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRestoreMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF8C00"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                            
                            <Border Background="#F8F8F8" Padding="15" CornerRadius="3" Margin="0,0,0,10">
                                <TextBlock Text="{Binding ResultMessage}" TextWrapping="Wrap" FontSize="14"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                <Button Content="完成" Command="{Binding BackToStep1Command}"
                                        Background="#0078D4" Foreground="White" FontWeight="SemiBold"/>
                                <Button Content="关闭应用" Command="{Binding CloseApplicationCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Quick Migrate Mode Content -->
            <ContentControl Grid.Column="0" Grid.ColumnSpan="2" 
                           Content="{Binding QuickMigratePage}"
                           Visibility="{Binding IsQuickMigrateMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F8F8F8" Padding="5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="© 2025 " Foreground="Gray" FontSize="11"/>
                    <TextBlock Text="诏无言" Foreground="#0078D4" FontWeight="SemiBold" FontSize="11"/>
                    <TextBlock Text=" | 目录迁移工具 " Foreground="Gray" FontSize="11"/>
                    <TextBlock Text="{Binding VersionText}" Foreground="Gray" FontSize="11"/>
                </StackPanel>
                <TextBlock Text="玲珑星核 | Windows 符号链接迁移方案" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Center"
                          Foreground="Gray" 
                          FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</Window>
